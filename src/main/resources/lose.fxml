<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<AnchorPane prefHeight="750.0"
            prefWidth="1310.0"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.controller.ScreenController">
    <ImageView fitHeight="750.0" fitWidth="1310.0" pickOnBounds="true" preserveRatio="false">
        <image>
            <Image url="@com/example/demo/images/background1.jpg" />
        </image>
    </ImageView>
    <ImageView layoutX="350.0" layoutY="50.0" fitHeight="500.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="false">
        <image>
            <Image url="@com/example/demo/images/gameover.png" />
        </image>
    </ImageView>
    <VBox alignment="CENTER" layoutX="620.0" layoutY="450.0" prefHeight="118.0" prefWidth="100.0">
        <children>
            <Button mnemonicParsing="false" onAction="#startGame" prefHeight="33.0" prefWidth="96.0" text="Retry">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#exitGame" prefHeight="33.0" prefWidth="96.0" text="Exit" />
        </children>
    </VBox>

</AnchorPane>
